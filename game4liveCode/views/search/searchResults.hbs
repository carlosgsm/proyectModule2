 <h2>Players list</h2>
<div>
  {{#each players as |player|}}
    <div style="border: black solid 2px; padding: 10px; width: 25%; margin: 5px 0;">
      <a href="/player/{{player._id}}">{{player.name}}</a>
        <form action="/players/delete/{{player._id}}" method="POST">
        <button class="btn btn-danger" style="margin: 5px">Delete!</button>
      </form>
      <div>
        <a class="btn btn-success" style="margin: 5px" href="/players/{{player._id}}/edit">Edit!</a>
      </div>
</div>
  {{/each}}
</div>
<a class="btn btn-secondary" href="/players/new">Add new player</a>